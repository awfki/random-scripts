import os
import socket
HOST = socket.gethostname()

if HOST.startswith("RSG", 0, 3) :
  #print "work laptop"
  #os.system("cp -v ~/github/random-scripts/BingWallpaper.py ~/bin/bingwallpaper")
  #os.system("cp -v ~/github/random-scripts/checkfiles   	~/bin/")
