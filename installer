  os.system("cp -v ~/github/random-scripts/getcfg		~/bin/")
  os.system("cp -v ~/github/random-scripts/ifcfg		~/bin/")
  os.system("cp -v ~/github/random-scripts/int		~/bin/")
  os.system("cp -v ~/github/random-scripts/ipcalc		~/bin/")
  os.system("cp -v ~/github/random-scripts/mac		~/bin/")
  os.system("cp -v ~/github/random-scripts/show		~/bin/  ")
  os.system("cp -v ~/github/random-scripts/calupdate		~/bin/  ")
else :
  #print "not work laptop"
  #os.system("cp -v ~/github/random-scripts/checkfiles   	~/bin/")
  os.system("cp -v ~/github/random-scripts/BingWallpaper.py	~/bin/bingwallpaper")
